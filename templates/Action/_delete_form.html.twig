{# We can't generate the Delete route, cause expected method is POST only. Since show url is the same, we use this one #}
<form method="post" action="{{ path('admin_' ~ identifier ~ '_show', {'id': entity.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entity.id) }}">
    <button class="btn btn-outline-danger">Delete</button>
</form>
